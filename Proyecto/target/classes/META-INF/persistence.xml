<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="AeropuertoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.mycompany.proyecto.modelo.Aerolinea</class>
    <class>com.mycompany.proyecto.modelo.Aeropuerto</class>
    <class>com.mycompany.proyecto.modelo.Asiento</class>
    <class>com.mycompany.proyecto.modelo.Avion</class>
    <class>com.mycompany.proyecto.modelo.Ciudad</class>
    <class>com.mycompany.proyecto.modelo.Consulta</class>
    <class>com.mycompany.proyecto.modelo.Fecha</class>
    <class>com.mycompany.proyecto.modelo.Pago</class>
    <class>com.mycompany.proyecto.modelo.Persona</class>
    <class>com.mycompany.proyecto.modelo.Piloto</class>
    <class>com.mycompany.proyecto.modelo.Reserva</class>
    <class>com.mycompany.proyecto.modelo.Tarifa</class>
    <class>com.mycompany.proyecto.modelo.Tarjeta</class>
    <class>com.mycompany.proyecto.modelo.Usuario</class>
    <class>com.mycompany.proyecto.modelo.Vuelo</class>
    <properties>
      <property name="javax.persistence.jdbc.url"
          value="jdbc:mysql://localhost:3306/aeropuerto?serverTimezone=America/Argentina/Buenos_Aires"/>

      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="racing"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
